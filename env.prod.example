# =============================================================================
# CosturaAI SaaS - Ambiente de Produção (EXEMPLO)
# =============================================================================
# ATENÇÃO: Copie este arquivo para .env.prod e configure com valores reais

# Django Core
SECRET_KEY=your-very-secret-production-key-here
DJANGO_ENV=prod
DEBUG=False
ALLOWED_HOSTS=costuraai.com.br,www.costuraai.com.br,145.223.92.74

# Database PostgreSQL
DB_NAME=costuraai_prod
DB_USER=costuraai_user
DB_PASSWORD=your-strong-database-password
DB_HOST=db
DB_PORT=5432

# Redis
REDIS_URL=redis://:your-redis-password@redis:6379/1
REDIS_PASSWORD=your-redis-password

# Celery
CELERY_BROKER_URL=redis://:your-redis-password@redis:6379/0
CELERY_RESULT_BACKEND=redis://:your-redis-password@redis:6379/0

# Email SMTP (exemplo com Gmail)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@costuraai.com.br
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=CosturaAI <noreply@costuraai.com.br>
SERVER_EMAIL=servidor@costuraai.com.br

# Sentry (Monitoramento de Erros)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
RELEASE_VERSION=1.0.0

# Stripe Production Keys
STRIPE_PUBLIC_KEY_LIVE=pk_live_your_live_key_here
STRIPE_SECRET_KEY_LIVE=sk_live_your_live_key_here
STRIPE_WEBHOOK_SECRET_LIVE=whsec_live_your_webhook_secret_here

# Mercado Pago Production Keys
MERCADOPAGO_PUBLIC_KEY_LIVE=APP_USR-your-public-key-here
MERCADOPAGO_ACCESS_TOKEN_LIVE=APP_USR-your-access-token-here

# Segurança
SESSION_COOKIE_AGE=86400
CSRF_COOKIE_AGE=86400

# Backup
BACKUP_SCHEDULE=0 3 * * *  # 3 AM todos os dias
BACKUP_RETENTION_DAYS=30

# Features flags
ENABLE_SIGNUP=True
ENABLE_SOCIAL_AUTH=False
MAINTENANCE_MODE=False

# Domínio e SSL
DOMAIN_NAME=costuraai.com.br
SSL_EMAIL=ssl@costuraai.com.br

# Monitoramento
PROMETHEUS_ENABLED=True
GRAFANA_ENABLED=True 